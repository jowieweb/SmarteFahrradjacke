<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<android.support.v7.widget.Toolbar
		android:id="@+id/chooseRouteActivityToolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		android:theme="@style/ThemeOverlay.AppCompat.Dark"
		android:elevation="4dp"/>

	<EditText
		android:id="@+id/chooseRouteActivityFromEditText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/chooseRouteActivityToolbar"
		android:layout_marginStart="16dp"
		android:layout_toStartOf="@+id/chooseRouteActivityMyLocationImageButton"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Von"/>

	<EditText
		android:id="@+id/chooseRouteActivityToEditText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/chooseRouteActivityMyLocationImageButton"
		android:layout_alignStart="@+id/chooseRouteActivityFromEditText"
		android:layout_below="@+id/chooseRouteActivityFromEditText"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Nach"/>

	<Button
		android:id="@+id/chooseRouteActivityStartNavigationButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="16dp"
		android:text="Navigation starten"/>

	<ImageButton
		android:id="@+id/chooseRouteActivityMyLocationImageButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/chooseRouteActivityToEditText"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/chooseRouteActivityToolbar"
		android:layout_marginEnd="16dp"
		app:srcCompat="@drawable/ic_my_location"/>

</RelativeLayout>